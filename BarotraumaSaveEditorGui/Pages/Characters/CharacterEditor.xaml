<UserControl x:Class="BarotraumaSaveEditorGui.Views.Characters.CharacterEditor"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BarotraumaSaveEditorGui.Views.Characters"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800">

    <StackPanel>
		<TextBlock Text="EXP"/>
		<TextBlock Text="{Binding Character.Character.ExperiencePoints}"/>
		<TextBlock Text="Salary"/>
		<TextBlock Text="{Binding Character.Character.Salary}"/>
	</StackPanel>
</UserControl>
